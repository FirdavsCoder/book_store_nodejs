extends layouts/main-layout.pug
block content
    main
      div.container-xxl
        h1 Add User
        form(action="/users", method="POST")
          //- <input type='text' name='username'>
          //- <input type='number', name='age'>
          div.form-floating.mb-3
            input.form-control#floatingInput(type="text", placeholder="johndoe", name="username")
            label(for="floatingInput") Username
          div.form-floating
            input.form-control#floatingPassword(type="number", placeholder="Password", name="age")
            label(for="floatingPassword") Age
          br
          button.btn.btn-primary(type="submit", style="width: 100%; height: 60px") Yuborish
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
